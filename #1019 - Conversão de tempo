import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        int N = input.nextInt();
        int horas = 0;
        int minutos = 0;
        int segundos = 0;

        horas = N/3600;
        N%=3600;

        minutos = N/60;
        N%=60;

        segundos = N;

        System.out.println(horas+":"+minutos+":"+segundos);
    }
}
